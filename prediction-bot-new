// ğŸ“Œ Define User Schema
const userSchema = new mongoose.Schema({
    telegramId: String,
    isApproved: Boolean
});

const User = mongoose.model("User", userSchema);

// ğŸ¯ Main Menu Keyboard
const predictionMenu = Markup.keyboard([
