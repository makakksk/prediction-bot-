// ğŸ“¸ Handle Screenshot Submission
bot.on("photo", async (ctx) => {
    try {
        const userId = ctx.from.id;
        const photoId = ctx.message.photo[ctx.message.photo.length - 1].file_id;

        console.log(`ğŸ“¸ Screenshot received from User: ${userId}`);

        // âœ… Send Screenshot to Admin
        await bot.telegram.sendPhoto(ADMIN_ID, photoId, {
            caption: `ğŸ“© New Registration Request\nğŸ‘¤ User ID: ${userId}`,
            reply_markup: {
                inline_keyboard: [
                    [{ text: "âœ… Approve", callback_data: `approve_${userId}` }],
                    [{ text: "âŒ Reject", callback_data: `reject_${userId}` }]
                ]
            }
        });

        // âœ… Confirm to User
        await ctx.reply("âœ… Screenshot received! Please wait for admin approval.");

    } catch (error) {
        console.error("âŒ Error in processing photo:", error);
        await ctx.reply("âš ï¸ Error occurred. Please try again.");
    }
});

// ğŸ”¥ Handle Approve/Reject Actions
bot.on("callback_query", async (ctx) => {
    try {
        const callbackData = ctx.callbackQuery.data;
        const userId = callbackData.split("_")[1];

        if (callbackData.startsWith("approve")) {
            await User.findOneAndUpdate({ telegramId: userId }, { isApproved: true }, { upsert: true });

            // âœ… Show both "Start Prediction" and "Next Prediction" buttons after approval
            await ctx.telegram.sendMessage(
                userId, 
                "âœ… Your registration has been approved! You can now access predictions.", 
                predictionMenu
            );

            await ctx.editMessageCaption(`âœ… Approved by Admin\nğŸ‘¤ User ID: ${userId}`);
        } 
        else if (callbackData.startsWith("reject")) {
            await User.findOneAndDelete({ telegramId: userId });
            await ctx.telegram.sendMessage(userId, "âŒ Your registration has been rejected. Please contact support.");
            await ctx.editMessageCaption(`âŒ Rejected by Admin\nğŸ‘¤ User ID: ${userId}`);
        }

        await ctx.answerCbQuery();
    } catch (error) {
        console.error("âŒ Error in callback query:", error);
    }
});

// ğŸ”¥ Prediction System
const users = {};

// Function to generate prediction
function generatePrediction(period) {
    const colors = ["RED", "GREEN"];
    const result = Math.floor(Math.random() * 10);
    const color = colors[Math.floor(Math.random() * 2)];
    const size = result >= 5 ? "BIG" : "SMALL";

    return `ğŸ“Š **Prediction Result**\n\nğŸ†” Period: **${period}**\nğŸ¨ Color: **${color}**\nğŸ² Result: **${size}**\n\nâœ… Sureshot prediction Only.`;
}

// ğŸ¯ Common Prediction Handler
async function handlePrediction(ctx) {
    const userId = ctx.from.id;

    // ğŸ” Check if user is approved
    const user = await User.findOne({ telegramId: userId });

    if (!user || !user.isApproved) {
        return ctx.reply("âš ï¸ You are not approved yet. Please wait for admin approval.");
    }

    users[userId] = { step: "waiting_period" };

    await ctx.reply("ğŸ“Š Enter the last 3 digits of the period number:");
}

// ğŸ¯ Handle "Start Prediction" Button Click
bot.hears("ğŸš€ Start Prediction", handlePrediction);

// ğŸ¯ Handle "Next Prediction" Button Click (Same as "Start Prediction")
bot.hears("â¡ï¸ Next Prediction", handlePrediction);

// ğŸ¯ Handle User Input for Prediction
bot.on("text", async (ctx) => {
    const userId = ctx.from.id;
    const text = ctx.message.text.trim();

    // âœ… Admin Broadcast Feature
    if (userId.toString() === ADMIN_ID && text.startsWith("/broadcast")) {
        const message = text.replace("/broadcast", "").trim();
        if (!message) {
            return ctx.reply("âš ï¸ Please enter a message to broadcast.");
        }

        // Fetch all approved users
        const users = await User.find({ isApproved: true });
        let sentCount = 0;

        for (const user of users) {
            try {
                await bot.telegram.sendMessage(user.telegramId, `ğŸ“¢ **Broadcast Message:**\n\n${message}`);
                sentCount++;
            } catch (error) {
                console.error(`âŒ Failed to send message to ${user.telegramId}:`, error);
            }
        }

        return ctx.reply(`âœ… Broadcast sent to ${sentCount} users.`);
    }

    // ğŸ” Check if user is approved
    const user = await User.findOne({ telegramId: userId });

    if (!user || !user.isApproved) {
        return ctx.reply("âš ï¸ You are not approved yet. Please wait for admin approval.");
    }

    if (users[userId] && users[userId].step === "waiting_period") {
        if (!/^\d{3}$/.test(text)) {
            return ctx.reply("âš ï¸ Please enter a valid 3-digit period number.");
        }

        // ğŸ”¥ Generate Prediction
        const predictionMessage = generatePrediction(text);
        users[userId].step = "prediction_done";

        await ctx.reply(predictionMessage);
    }
});

// ğŸ”¥ Start the bot
bot.launch()
    .then(() => console.log("ğŸ¤– Bot is running..."))
    .catch(err => console.error("âŒ Bot launch error:", err));